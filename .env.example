# ========================================
# PRIVATE KEYS AND ACCOUNTS
# ========================================
# WARNING: Never commit your actual private key to version control!
# Use hardware wallets or secure key management systems for production

# Deployer private key (with 0x prefix)
PRIVATE_KEY=your_private_key_here

# Alternative: Use mnemonic phrase (12 or 24 words)
# MNEMONIC=your twelve word mnemonic phrase here

# ========================================
# RPC ENDPOINTS
# ========================================

# Ethereum Sepolia Testnet
SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/your-api-key
# Alternative providers:
# SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/your-api-key
# SEPOLIA_RPC_URL=https://ethereum-sepolia.publicnode.com

# Zama FHE Network
ZAMA_RPC_URL=https://devnet.zama.ai

# Local network (for development)
LOCAL_RPC_URL=http://127.0.0.1:8545

# ========================================
# API KEYS FOR VERIFICATION & SERVICES
# ========================================

# Etherscan API key for contract verification
# Get your key at: https://etherscan.io/myapikey
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# CoinMarketCap API key for gas price reporting
# Get your key at: https://pro.coinmarketcap.com/signup
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key_here

# ========================================
# GAS AND PERFORMANCE SETTINGS
# ========================================

# Enable gas reporting (true/false)
REPORT_GAS=false

# Enable contract size reporting (true/false)
CONTRACT_SIZER=false

# Gas price limit (in gwei) - transaction will fail if gas price exceeds this
GAS_PRICE_LIMIT=100

# Gas limit for transactions
GAS_LIMIT=3000000

# ========================================
# SECURITY CONFIGURATION
# ========================================

# Enable security checks before deployment (true/false)
SECURITY_CHECKS=true

# Pause functionality configuration
PAUSER_ADDRESS=your_pauser_address_here
PAUSER_ROLE=0x65d7a28e3265b37a6474929f336521b332c1681b933f6cb9f3376673440d862a

# Emergency stop mechanism
EMERGENCY_STOP_ENABLED=true
EMERGENCY_CONTACT=your_emergency_contact_email_here

# ========================================
# TESTING CONFIGURATION
# ========================================

# Test network selection
TEST_NETWORK=hardhat

# Enable verbose test output (true/false)
VERBOSE_TESTS=false

# Mocha reporter (spec, json, minimal, etc.)
MOCHA_REPORTER=spec

# Test timeout in milliseconds
TEST_TIMEOUT=40000

# ========================================
# DEPLOYMENT CONFIGURATION
# ========================================

# Auto-verify contracts after deployment (true/false)
AUTO_VERIFY=true

# Save deployment info to file (true/false)
SAVE_DEPLOYMENT_INFO=true

# Deployment confirmations to wait for
DEPLOYMENT_CONFIRMATIONS=2

# ========================================
# MONITORING AND LOGGING
# ========================================

# Enable detailed logging (true/false)
VERBOSE_LOGGING=false

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Export logs to file (true/false)
EXPORT_LOGS=false

# ========================================
# OPTIMIZATION SETTINGS
# ========================================

# Solidity optimizer runs (higher = more optimized for runtime, lower = cheaper deployment)
OPTIMIZER_RUNS=200

# Enable Yul optimizer (true/false)
YUL_OPTIMIZER=true

# Enable via-IR compilation (experimental, better optimization)
VIA_IR=false

# ========================================
# NETWORK-SPECIFIC SETTINGS
# ========================================

# Block explorer URLs
SEPOLIA_EXPLORER=https://sepolia.etherscan.io
ZAMA_EXPLORER=https://explorer.zama.ai

# Chain IDs
SEPOLIA_CHAIN_ID=11155111
ZAMA_CHAIN_ID=8009
HARDHAT_CHAIN_ID=1337

# ========================================
# FEATURE FLAGS
# ========================================

# Enable upgradeable contracts (true/false)
UPGRADEABLE=false

# Enable access control (true/false)
ACCESS_CONTROL=true

# Enable pausable functionality (true/false)
PAUSABLE=true

# Enable reentrancy guard (true/false)
REENTRANCY_GUARD=true

# ========================================
# DEVELOPMENT OPTIONS
# ========================================

# Skip compilation if contracts haven't changed (true/false)
SKIP_COMPILE=false

# Clean build artifacts before compilation (true/false)
CLEAN_BUILD=false

# Generate TypeChain typings (true/false)
GENERATE_TYPES=true

# ========================================
# CI/CD CONFIGURATION
# ========================================

# Codecov token for coverage reports
CODECOV_TOKEN=your_codecov_token_here

# Enable CI mode (disables interactive prompts)
CI=false

# GitHub token for automated releases
GITHUB_TOKEN=your_github_token_here

# ========================================
# ADDITIONAL SERVICES
# ========================================

# Tenderly API key for debugging
TENDERLY_API_KEY=your_tenderly_api_key_here

# Defender API credentials
DEFENDER_API_KEY=your_defender_api_key_here
DEFENDER_API_SECRET=your_defender_api_secret_here

# ========================================
# NOTES
# ========================================
# 1. Copy this file to .env and fill in your actual values
# 2. Never commit .env file to version control
# 3. Add .env to your .gitignore file
# 4. Use different .env files for different environments (.env.local, .env.production)
# 5. Rotate keys regularly for production deployments
# 6. Use environment-specific values in CI/CD pipelines
# 7. Consider using secret management services (AWS Secrets Manager, HashiCorp Vault, etc.)
