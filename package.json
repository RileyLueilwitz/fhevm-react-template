{
  "name": "universal-fhevm-sdk",
  "version": "1.0.0",
  "description": "Universal FHEVM SDK - Framework-agnostic encryption library with multi-framework examples",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "build:sdk": "npm run build --workspace=packages/fhevm-sdk",
    "dev:nextjs": "npm run dev --workspace=examples/nextjs",
    "dev:react": "npm run dev --workspace=examples/react",
    "build:nextjs": "npm run build --workspace=examples/nextjs",
    "build:react": "npm run build --workspace=examples/react",
    "install:all": "npm install && npm run build:sdk",
    "compile": "hardhat compile",
    "clean": "hardhat clean",
    "test": "hardhat test",
    "test:coverage": "hardhat coverage",
    "test:gas": "REPORT_GAS=true hardhat test",
    "deploy": "hardhat run scripts/deploy.js --network sepolia",
    "deploy:local": "hardhat run scripts/deploy.js --network localhost",
    "deploy:zama": "hardhat run scripts/deploy.js --network zama",
    "verify": "node scripts/verify.js",
    "interact": "node scripts/interact.js",
    "simulate": "node scripts/simulate.js",
    "node": "hardhat node",
    "accounts": "hardhat accounts",
    "balance": "hardhat balance",
    "contract-info": "hardhat contract-info",
    "lint": "npm run lint:sol && npm run lint:js",
    "lint:sol": "solhint 'contracts/**/*.sol'",
    "lint:js": "eslint '**/*.js'",
    "lint:fix": "npm run lint:sol:fix && npm run lint:js:fix",
    "lint:sol:fix": "solhint 'contracts/**/*.sol' --fix",
    "lint:js:fix": "eslint '**/*.js' --fix",
    "format": "prettier --write '**/*.{js,json,sol,md}'",
    "format:check": "prettier --check '**/*.{js,json,sol,md}'",
    "security": "npm run security:audit && npm run security:slither",
    "security:audit": "npm audit --audit-level=moderate",
    "security:fix": "npm audit fix",
    "security:slither": "slither . --filter-paths 'node_modules' --exclude naming-convention,solc-version || true",
    "security:mythril": "myth analyze contracts/*.sol || true",
    "security:check-updates": "npm outdated",
    "performance": "npm run test:gas && npm run size-check",
    "size-check": "hardhat size-contracts",
    "analyze": "npm run security && npm run performance",
    "prepare": "husky install",
    "pre-commit": "npm run lint && npm run format:check && npm test",
    "validate": "npm run compile && npm run lint && npm test && npm run security"
  },
  "keywords": [
    "fhevm",
    "fhe",
    "sdk",
    "encryption",
    "privacy",
    "blockchain",
    "react",
    "nextjs",
    "typescript",
    "zama",
    "universal-sdk"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@openzeppelin/hardhat-upgrades": "^2.4.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-security": "^2.1.0",
    "hardhat": "^2.19.0",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-gas-reporter": "^1.0.10",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "prettier-plugin-solidity": "^1.3.1",
    "solhint": "^4.1.1",
    "solhint-plugin-prettier": "^0.1.0",
    "solidity-coverage": "^0.8.5"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "fhevmjs": "^0.6.2"
  },
  "lint-staged": {
    "*.sol": [
      "solhint --fix",
      "prettier --write"
    ],
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}

